<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeWithoutActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_for_text</item>
    </style>

    <style name="TextStyle" parent="DefaultTextView">
        <item name="android:textColor">@color/colorForText</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

    <style name="TextStyleForLink" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_link_for_document</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_for_button</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">@dimen/size_for_text</item>
        <item name="android:textColor">@color/colorForTextOfButton</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">@dimen/padding_for_main_menu</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.13</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">@dimen/size_for_icon_width</item>
        <item name="android:layout_height">@dimen/size_for_icon_height</item>
    </style>

    <style name="ImageViewStyleMainMenu">
        <item name="android:layout_width">@dimen/size_for_icon_width_main_menu</item>
        <item name="android:layout_height">@dimen/size_for_icon_height_main_menu</item>
    </style>
</resources>
